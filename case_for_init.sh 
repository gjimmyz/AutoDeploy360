#!/bin/bash
if [[ `id -u` -eq 0 ]]
then
    while true
    do
        echo -e "
        \033[31m 1|a|A 初始化+业务部署 \033[0m
        \033[32m 2|b|B 软件安装 \033[0m
        \033[33m 3|c|C 优化 \033[0m
        \033[34m 4|d|D 进入管理系统 \033[0m
        \033[35m 5|e|E 进入github commit \033[0m
        \033[36m 99|q|Q 退出 \033[0m
        "
        read -p "请选择主菜单选项: " main_menu_choice
        case $main_menu_choice in
            1|a|A)
                while true
                do
                    echo -e "
                    \033[31m 1|a|A 初始化US20+Centos7 \033[0m
                    \033[32m 2|b|B 迷你PC Intel NUC业务_US2004 \033[0m
                    \033[33m 3|c|C Check 初始化US20+Centos7 \033[0m
                    \033[34m 4|d|D 返回主菜单 \033[0m
                    \033[35m 99|q|Q 退出 \033[0m
                    "
                    read -p "请选择二级菜单选项: " submenu_choice
                    case $submenu_choice in
                        1|a|A)
                            cd /root/scripts/based_on_role_yaml && `which ansible-playbook` -i localhost generate_hosts.yaml
                            cd /root/scripts/based_on_role_yaml && `which ansible-playbook` -i get_real_can_loginhost_for_create_hosts_yaml/files/hosts.yaml playbook_name.yaml --extra-vars "@roles_to_include.yaml" --extra-vars "roles=['system_info','reboot_for_ubuntu20','reboot_for_centos7']"
                            ;;
                        2|b|B)
                            cd /root/scripts/based_on_role_yaml && `which ansible-playbook` -i localhost generate_hosts.yaml
                            cd /root/scripts/based_on_role_yaml && `which ansible-playbook` -i get_real_can_loginhost_for_create_hosts_yaml/files/hosts.yaml playbook_name.yaml --extra-vars "@roles_to_include.yaml" --extra-vars "roles=['system_info','install_samba_for_ubuntu20','reboot_for_ubuntu20']"
                            ;;
                        3|c|C)
                            cd /root/scripts/based_on_role_yaml && `which ansible-playbook` -i localhost generate_hosts.yaml
                            cd /root/scripts/based_on_role_yaml && `which ansible-playbook` -i get_real_can_loginhost_for_create_hosts_yaml/files/hosts.yaml get_facts.yaml
                            ;;
                        4|d|D)
                            break
                            ;;
                        99|q|Q)
                            exit 0
                            ;;
                        *)
                            echo "再多一次机会给你～"
                            ;;
                    esac
                done
                ;;
            2|b|B)
                while true
                do
                    echo -e "
                    \033[31m 1|a|A 单一软件安装 \033[0m
                    \033[32m 2|b|B 集群软件安装 \033[0m
                    \033[33m 3|c|C 返回主菜单 \033[0m
                    \033[34m 99|q|Q 退出 \033[0m
                    "
                    read -p "请选择子菜单选项: " submenu_choice
                    case $submenu_choice in
                        1|a|A)
                            while true
                            do
                                echo -e "
                                \033[31m 1|a|A Install Samba \033[0m
                                \033[32m 2|b|B xxxx \033[0m
                                \033[33m 3|c|C xxx \033[0m
                                \033[34m 4|d|D 返回主菜单 \033[0m
                                \033[35m 99|q|Q 退出 \033[0m
                                "
                                read -p "请选择子菜单选项: " three_menu_choice
                                case $three_menu_choice in
                                    1|a|A)
                                        cd /root/scripts/based_on_role_yaml && `which ansible-playbook` -i localhost generate_hosts.yaml
                                        cd /root/scripts/based_on_role_yaml && `which ansible-playbook` -i get_real_can_loginhost_for_create_hosts_yaml/files/hosts.yaml playbook_name.yaml --extra-vars "@roles_to_include.yaml" --extra-vars "roles=['install_samba_for_centos7']"
                                        ;;
                                    2|b|B)
                                        echo "第2个软件"
                                        ;;
                                    3|c|C)
                                        echo "第3个软件"
                                        ;;
                                    4|d|D)
                                        break
                                        ;;
                                    99|q|Q)
                                        exit 0
                                        ;;
                                    *)
                                        echo "再多一次机会给你～"
                                        ;;
                                esac
                            done
                            ;;
                        2|b|B)
                            echo "第1个软件"
                            ;;
                        3|c|C)
                            break
                            ;;
                        99|q|Q)
                            exit 0
                            ;;
                        *)
                            echo "再多一次机会给你～"
                            ;;
                    esac
                done
                ;;
            3|c|C)
                while true
                do
                    echo -e "
                    \033[31m 1|a|A tune优化 \033[0m
                    \033[32m 2|b|B 单一软件优化 \033[0m
                    \033[33m 3|c|C 集群软件优化 \033[0m
                    \033[34m 4|d|D 返回主菜单 \033[0m
                    \033[35m 99|q|Q 退出 \033[0m
                    "
                    read -p "请选择二级菜单选项: " submenu_choice
                    case $submenu_choice in
                        1|a|A)
                            echo "待更新1"
                            ;;
                        2|b|B)
                            echo "待更新2"
                            ;;
                        3|c|C)
                            echo "待更新3"
                            ;;
                        4|d|D)
                            break
                            ;;
                        99|q|Q)
                            exit 0
                            ;;
                        *)
                            echo "再多一次机会给你～"
                            ;;
                    esac
                done
                ;;
            4|d|D)
                bash
                ;;
            5|e|E)
                ssh root@10.21.254.75
                ;;
            99|q|Q)
                exit 0
                ;;
            *)
                echo "再多一次机会给你～"
                ;;
        esac
    done
fi